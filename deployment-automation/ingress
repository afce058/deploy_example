apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: minimal-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - http:
      paths:
      - path: /#{docker.repo1}#
        pathType: Prefix
        backend:
          service:
            name: #{docker.repo1}#
            port:
              number: 80
      - path: /#{docker.repo2}#
        pathType: Prefix
        backend:
          service:
            name: #{docker.repo2}#
            port:
              number: 80
      - path: /
        pathType: Prefix
        backend:
          service:
            name: #{docker.repo_front}#
            port:
              number: 80